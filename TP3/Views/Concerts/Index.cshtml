@model IEnumerable<TP3.Models.Concert>

@{
    ViewData["Title"] = "Liste des Concerts";
}

<div class="container mt-4">
    <h1 class="mb-4">Liste des Concerts</h1>
    <table class="table table-striped table-bordered">
        <thead class="thead-dark">
            <tr>
                <th scope="col">Titre</th>
                <th scope="col">Artiste</th>
                <th scope="col">Date</th>
                <th scope="col">Lieu</th>
                <th scope="col">Détails</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var concert in Model)
            {
                <tr>
                    <td>@concert.Title</td>
                    <td>@concert.Artist</td>
                    <td>@concert.Date.ToShortDateString()</td>
                    <td>@concert.Location</td>
                    <td class="text-center">
                        <a href="/Concerts/Details/@concert.Id" class="btn btn-info btn-sm w-100">Voir</a>
                    </td>
                </tr>
            }
        </tbody>
    </table>
    <div class="text-center">
        <a href="/Concerts/Create" class="btn btn-primary btn-lg">Ajouter un Concert</a>
    </div>
</div>
