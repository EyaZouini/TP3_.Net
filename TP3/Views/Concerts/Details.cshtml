@model TP3.Models.Concert

<div class="container mt-4">
    <h1 class="mb-4">Modifier le concert</h1>

    <form asp-action="Edit" method="post">
        <input type="hidden" asp-for="Id" />

        <div class="form-group">
            <label asp-for="Title" class="form-label"></label>
            <input asp-for="Title" class="form-control" />
        </div>

        <div class="form-group">
            <label asp-for="Artist" class="form-label"></label>
            <input asp-for="Artist" class="form-control" />
        </div>

        <div class="form-group">
            <label asp-for="Date" class="form-label"></label>
            <input asp-for="Date" type="date" class="form-control" />
        </div>

        <div class="form-group">
            <label asp-for="Location" class="form-label"></label>
            <input asp-for="Location" class="form-control" />
        </div>

        <div class="row mt-4">
            <div class="col-md-2">
                <button type="submit" class="btn btn-primary w-100">Enregistrer</button>
            </div>
            <div class="col-md-2">
                <a asp-action="Index" class="btn btn-secondary w-100">Annuler</a>
            </div>
        </div>
    </form>

    <div class="row mt-4">
        <div class="col-md-2">
            <form asp-action="DeleteConfirmed" method="post" style="display:inline;">
                <input type="hidden" asp-for="Id" />
                <button type="submit" class="btn btn-danger w-100">Supprimer</button>
            </form>
        </div>
    </div>
</div>
