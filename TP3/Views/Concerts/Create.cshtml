@model TP3.Models.Concert

<div class="container mt-4">
    <h1 class="mb-4">Ajouter un Concert</h1>

    <form asp-action="Create" method="post">
        <div class="form-group">
            <label for="Title" class="form-label">Titre :</label>
            <input type="text" id="Title" name="Title" class="form-control" required />
        </div>

        <div class="form-group">
            <label for="Artist" class="form-label">Artiste :</label>
            <input type="text" id="Artist" name="Artist" class="form-control" required />
        </div>

        <div class="form-group">
            <label for="Date" class="form-label">Date :</label>
            <input type="date" id="Date" name="Date" class="form-control" required />
        </div>

        <div class="form-group">
            <label for="Location" class="form-label">Lieu :</label>
            <input type="text" id="Location" name="Location" class="form-control" required />
        </div>

        <div class="row mt-4">
            <div class="col-md-2">
                <button type="submit" class="btn btn-primary w-100">Ajouter</button>
            </div>
            <div class="col-md-2">
                <a href="/Concerts" class="btn btn-secondary w-100">Annuler</a>
            </div>
        </div>
    </form>
</div>
